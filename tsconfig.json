{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["ESNext"],
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "CommonJS",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ESNext"
  },
  "include": ["src", "bin"],
  "exclude": ["node_modules", "dist"]
}